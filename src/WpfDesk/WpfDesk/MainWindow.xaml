<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:WpfDesk.ViewModel"
        xmlns:controls="clr-namespace:WpfDesk.Controls" x:Class="WpfDesk.MainWindow"
        Title="WpfDesk" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Button Content="Clients" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Top" Width="75" Click="ButtonBase_OnClick"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="RenderCapability:"/>
                <Label Content="{Binding RenderCapabilityValue}"/>
                <Line/>
                <TextBlock/>
            </StackPanel>
        </StackPanel>
        <controls:ClientUserControl Width="100" Background="AntiqueWhite">
            <controls:ClientUserControl.Client>Id111,Id111_IsGreat!</controls:ClientUserControl.Client>
        </controls:ClientUserControl>
    </StackPanel>
</Window>
