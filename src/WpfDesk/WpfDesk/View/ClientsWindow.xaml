<Window x:Class="WpfDesk.View.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:vm="clr-namespace:WpfDesk.ViewModel" xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Clients" Height="641.3" Width="646" Loaded="ClientsWindow_OnLoaded" Padding="0.5">
    <Window.DataContext>
        <vm:ClientsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <CollectionViewSource x:Key="Clients" Source="{Binding Path=ClientViewModels}"></CollectionViewSource>
        </Grid.Resources>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TreeView Name="ClientsTreeView" Margin="10" ItemsSource="{Binding ClientViewModels}">
                <TreeView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Id}"></TextBlock>
                            <TextBlock Text="{Binding Path=Description}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
